# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=memory_plugin
POSTGRES_HOST=postgres

# Ollama Configuration
# For local development, typically http://localhost:11434
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=mxbai-embed-large

# API Configuration
API_PORT=8000
# Allow all origins for development
CORS_ORIGINS=*
# Vector search parameters
SIMILARITY_THRESHOLD=0.55
DEFAULT_BUCKET_NAME=General
SEARCH_RESULTS_LIMIT=10
INITIAL_SEARCH_LIMIT=15
KEYWORD_BOOST_FACTOR=0.05
EMBEDDING_TIMEOUT=30.0

# Application Environment
APP_ENV=development
# Number of worker processes for the API (development uses --reload instead)
WORKERS=1
